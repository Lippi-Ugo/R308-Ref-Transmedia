---
import "../styles/global.css";
const { title } = Astro.props;
---
<!doctype html>
<html lang="fr" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-linear-to-br from-slate-950 via-slate-900 to-amber-950 text-slate-100 min-h-screen eater-regular relative">
		<!-- Decorative background words (cringe) -->
		<div aria-hidden="true" class="pointer-events-none fixed inset-0 z-50 overflow-hidden">
			<div class="absolute left-[2%] top-[4%] transform -rotate-12 text-4xl md:text-6xl text-amber-500 opacity-25 blur-xs">Lucie</div>
			<div class="absolute left-[40%] top-[8%] transform rotate-6 text-3xl md:text-5xl text-amber-400 opacity-20 blur-xs">Amour de ma vie</div>
			<div class="absolute left-[65%] top-[18%] transform -rotate-6 text-3xl md:text-5xl text-amber-300 opacity-20 blur-xs">Tu me manques</div>
			<div class="absolute left-[10%] top-[35%] transform rotate-12 text-2xl md:text-4xl text-amber-400 opacity-18 blur-xs">Je pense à toi</div>
			<div class="absolute left-[55%] top-[40%] transform -rotate-18 text-2xl md:text-4xl text-amber-300 opacity-18 blur-xs">Réponds s'il te plaît</div>
			<div class="absolute left-[22%] top-[60%] transform rotate-8 text-3xl md:text-5xl text-amber-400 opacity-20 blur-xs">Je t'aime</div>
			<div class="absolute left-[72%] top-[68%] transform -rotate-10 text-2xl md:text-4xl text-amber-300 opacity-18 blur-xs">Tu es ma raison</div>
			<div class="absolute left-[5%] top-[78%] transform rotate-6 text-2xl md:text-4xl text-amber-400 opacity-18 blur-xs">Petit cadeau</div>
			<div class="absolute left-[50%] top-[82%] transform -rotate-4 text-4xl md:text-6xl text-amber-500 opacity-25 blur-xs">Lucie</div>
		</div>
		<div class="relative z-10">
			<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	
	@media (min-width: 768px) {
		html,
		body {
			background-attachment: fixed;
		}
	}
</style>
