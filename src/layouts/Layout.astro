---
import "../styles/global.css";
const { title } = Astro.props;
---
<!doctype html>
<html lang="fr" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-linear-to-br from-slate-950 via-slate-900 to-amber-950 text-slate-100 min-h-screen eater-regular relative">
		<!-- Decorative background words (cringe) -->
		<div aria-hidden="true" class="pointer-events-none absolute inset-0 z-0 overflow-hidden">
			<div class="absolute left-[2%] top-[2%] transform -rotate-12 text-4xl md:text-6xl text-amber-500 opacity-25 blur-xs">Lucie</div>
			<div class="absolute left-[40%] top-[5%] transform rotate-6 text-3xl md:text-5xl text-amber-400 opacity-20 blur-xs">Amour de ma vie</div>
			<div class="absolute left-[65%] top-[8%] transform -rotate-6 text-3xl md:text-5xl text-amber-300 opacity-20 blur-xs">Tu me manques</div>
			<div class="absolute left-[10%] top-[12%] transform rotate-12 text-2xl md:text-4xl text-amber-400 opacity-18 blur-xs">Je pense à toi</div>
			<div class="absolute left-[55%] top-[16%] transform -rotate-18 text-2xl md:text-4xl text-amber-300 opacity-18 blur-xs">Réponds s'il te plaît</div>
			<div class="absolute left-[22%] top-[20%] transform rotate-8 text-3xl md:text-5xl text-amber-400 opacity-20 blur-xs">Je t'aime</div>
			<div class="absolute left-[72%] top-[24%] transform -rotate-10 text-2xl md:text-4xl text-amber-300 opacity-18 blur-xs">Tu es ma raison</div>
			<div class="absolute left-[5%] top-[28%] transform rotate-6 text-2xl md:text-4xl text-amber-400 opacity-18 blur-xs">Petit cadeau</div>
			<div class="absolute left-[50%] top-[32%] transform -rotate-4 text-4xl md:text-6xl text-amber-500 opacity-25 blur-xs">Lucie</div>
			<div class="absolute left-[15%] top-[36%] transform rotate-10 text-3xl md:text-5xl text-amber-400 opacity-20 blur-xs">Mon cœur</div>
			<div class="absolute left-[60%] top-[40%] transform -rotate-8 text-2xl md:text-4xl text-amber-300 opacity-18 blur-xs">Tu me hantes</div>
			<div class="absolute left-[30%] top-[44%] transform rotate-6 text-3xl md:text-5xl text-amber-400 opacity-20 blur-xs">Lucie forever</div>
			<div class="absolute left-[8%] top-[48%] transform -rotate-12 text-2xl md:text-4xl text-amber-500 opacity-18 blur-xs">Pourquoi...</div>
			<div class="absolute left-[70%] top-[52%] transform rotate-4 text-4xl md:text-6xl text-amber-300 opacity-25 blur-xs">Lucie</div>
			<div class="absolute left-[35%] top-[56%] transform -rotate-8 text-2xl md:text-4xl text-amber-400 opacity-18 blur-xs">Mon obsession</div>
			<div class="absolute left-[12%] top-[60%] transform rotate-10 text-3xl md:text-5xl text-amber-300 opacity-20 blur-xs">Tu es tout</div>
			<div class="absolute left-[62%] top-[64%] transform -rotate-6 text-2xl md:text-4xl text-amber-500 opacity-18 blur-xs">Reviens moi</div>
			<div class="absolute left-[25%] top-[68%] transform rotate-8 text-3xl md:text-5xl text-amber-400 opacity-20 blur-xs">Lucie chérie</div>
			<div class="absolute left-[75%] top-[72%] transform -rotate-12 text-2xl md:text-4xl text-amber-300 opacity-18 blur-xs">Sans toi je meurs</div>
			<div class="absolute left-[5%] top-[76%] transform rotate-6 text-4xl md:text-6xl text-amber-500 opacity-25 blur-xs">Lucie</div>
			<div class="absolute left-[48%] top-[80%] transform -rotate-10 text-2xl md:text-4xl text-amber-400 opacity-18 blur-xs">Ma belle</div>
			<div class="absolute left-[18%] top-[84%] transform rotate-12 text-3xl md:text-5xl text-amber-300 opacity-20 blur-xs">Mon ange</div>
			<div class="absolute left-[68%] top-[88%] transform -rotate-8 text-2xl md:text-4xl text-amber-400 opacity-18 blur-xs">Je t'adore</div>
			<div class="absolute left-[33%] top-[92%] transform rotate-4 text-3xl md:text-5xl text-amber-500 opacity-20 blur-xs">Pourquoi tu pars</div>
			<div class="absolute left-[80%] top-[96%] transform -rotate-6 text-4xl md:text-6xl text-amber-300 opacity-25 blur-xs">Lucie</div>
		</div>
		<div class="relative z-50">
			<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100%;
	}
</style>
